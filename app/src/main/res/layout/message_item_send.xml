<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="100dp"
    android:gravity="end"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/img"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginHorizontal="5dp"
        android:layout_alignBottom="@id/tvSms"
        app:cardCornerRadius="17dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user_1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSms"
        style="@style/text_style_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="678dp"
        android:layout_toStartOf="@id/img"
        android:text="salomlar" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_alignEnd="@id/img"
        android:layout_margin="5dp"
        android:text="@string/date"
        android:textColor="#B6B6B6"
        android:textSize="12sp" />
</RelativeLayout>